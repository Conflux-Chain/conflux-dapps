{
    "name": "conflux-dapps",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "dapps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "dev-all": "turbo run dev --parallel",
        "dev": "turbo run dev --scope={dapp-box,shuttle-flow}",
        "dev:dapp-box": "turbo run dev --scope=dapp-box",
        "build:dapp-box": "turbo run build --scope=dapp-box",
        "dev:cross-space": "turbo run dev --scope=cross-space",
        "build:cross-space": "turbo run build --scope=cross-space",
        "dev:shuttle-flow": "turbo run dev --scope=shuttle-flow",
        "build:shuttle-flow": "turbo run build --scope=shuttle-flow"
    },
    "devDependencies": {
        "@types/node": "^10.17.60",
        "prettier": "^2.5.1",
        "prettier-plugin-tailwindcss": "^0.1.8",
        "turbo": "latest"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "packageManager": "yarn@1.22.17"
}
